{
  "name": "plugin-name",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/wppunk/WPPlugin.git",
  "author": "Maxym Denysenko <mdenisenko95@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "jest": "^26.4.0",
    "jest-fetch-mock": "^3.0.3"
  },
  "devDependencies": {
    "@symfony/webpack-encore": "^0.30.2",
    "@wordpress/eslint-plugin": "^7.1.0",
    "autoprefixer": "^9.8.6",
    "encore": "^0.0.30-beta",
    "eslint": "^7.7.0",
    "eslint-loader": "^3.0.0",
    "husky": "^4.2.5",
    "pkg": "^4.4.9",
    "postcss-loader": "^3.0.0",
    "postcss-simple-vars": "^5.0.2",
    "webpack-notifier": "^1.8.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn cs"
    }
  },
  "jest": {
    "automock": false,
    "verbose": true,
    "testURL": "http://domain.tld/",
    "setupFiles": [
      "<rootDir>/tests/js/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "\\.[tj]sx?$": [
        "babel-jest",
        {
          "presets": [
            [
              "babel-preset-env",
              {
                "targets": {
                  "node": 10
                }
              }
            ]
          ]
        }
      ]
    }
  },
  "scripts": {
    "cs": "eslint assets/src/js/**/*.js",
    "build": "encore production",
    "dev": "encore dev",
    "dev-watch": "encore dev --watch",
    "unit": "jest"
  }
}
