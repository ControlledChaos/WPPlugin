{
	"name": "plugin-name",
	"version": "1.0.0",
	"repository": "{URL}",
	"author": "{AUTHOR} <{AUTHOR_URL}>",
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"@symfony/webpack-encore": "^0.33.0",
		"autoprefix": "^1.0.1",
		"babel-preset-env": "^1.7.0",
		"eslint": "^7.15.0",
		"eslint-config-wordpress": "^2.0.0",
		"eslint-loader": "^4.0.2",
		"husky": "^4.3.6",
		"jest": "^26.6.3",
		"jest-fetch-mock": "^3.0.3",
		"sass": "^1.30.0",
		"sass-loader": "^10.1.0",
		"stylelint": "^13.6.1",
		"stylelint-config-standard": "^20.0.0",
		"webpack-notifier": "^1.12.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"Firefox ESR",
		"not dead"
	],
	"jest": {
		"automock": false,
		"verbose": true,
		"testURL": "http://domain.tld/",
		"setupFiles": [
			"<rootDir>/.tests/js/setupTests.js"
		],
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"transform": {
			"\\.[tj]sx?$": [
				"babel-jest",
				{
					"presets": [
						[
							"babel-preset-env",
							{
								"targets": {
									"node": 10
								}
							}
						]
					]
				}
			]
		}
	},
	"husky": {
		"hooks": {
			"pre-push": "npm run cs -- --silent --continue-on-error"
		}
	},
	"scripts": {
		"cs": "run-s -c cs:*",
		"cs:js": "eslint assets/.src/js",
		"cs:scss": "stylelint \"assets/.src/**/*.scss\"",
		"cs:php": "composer cs",
		"build": "encore production --config='.webpack.config.js'",
		"dev": "encore dev --config='.webpack.config.js'",
		"dev-watch": "encore dev --watch --config='.webpack.config.js'",
		"unit": "jest"
	}
}
