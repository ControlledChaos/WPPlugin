{
  "name": "wppunk/plugin-name",
  "description": "Plugin description",
  "license": "MIT",
  "authors": [
    {
      "name": "WPPunk",
      "email": "i@wp-punk.com"
    }
  ],
  "config": {
    "platform": {
      "php": "7.2.5"
    }
  },
  "require": {
    "symfony/dependency-injection": "^5.1.5",
    "symfony/config": "^5.1.5",
    "coenjacobs/mozart": "0.6.0-beta-3"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "phpcompatibility/php-compatibility": "^9.3.5",
    "codeception/codeception": "^4.1.7",
    "codeception/module-asserts": "^1.3.0",
    "codeception/module-db": "^1.0.1",
    "codeception/module-webdriver": "^1.1.1",
    "brain/monkey": "^2.4",
    "brainmaestro/composer-git-hooks": "^2.8.3",
    "lucatume/wp-browser": "^2.6.10"
  },
  "autoload": {
    "psr-4": {
      "PluginName\\": "src/",
      "PluginName\\Dependencies\\": "dependencies/psr/"
    },
    "classmap": [
      "dependencies/classmap/"
    ]
  },
  "extra": {
    "phpcodesniffer-search-depth": 1,
    "hooks": {
      "pre-push": [
        "composer cs"
      ]
    },
    "mozart": {
      "dep_namespace": "PluginName\\Dependencies\\",
      "dep_directory": "/dependencies/psr/",
      "classmap_prefix": "plugin_name_",
      "classmap_directory": "/dependencies/classmap/",
      "packages": [
        "symfony/dependency-injection",
        "symfony/config"
      ],
      "delete_vendor_directories": false,
      "override_autoload": {
        "symfony/polyfill-php80": {}
      }
    }
  },
  "scripts": {
    "acceptance": "codecept run acceptance -c .codeception.yml",
    "unit": "codecept run unit -c .codeception.yml",
    "cs": "phpcs --standard=.phpcs.xml .",
    "post-install-cmd": [
      "mozart compose",
      "composer dump-autoload"
    ],
    "post-update-cmd": [
      "mozart compose",
      "composer dump-autoload"
    ]
  }
}
